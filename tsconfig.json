{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    // "pretty": false,
    "noImplicitAny": false,
    "alwaysStrict": false,
    // "noImplicitReturns": false,
    // "noImplicitThis": false,
    "outDir": ".next",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "strictPropertyInitialization": false
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "./pages/**/*",
    "./src/**/*",
    "./ui/**/*",
    "types.ts"
, "bk/_app.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
